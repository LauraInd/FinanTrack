<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.svalero.finances.controller.AddTransactionController" spacing="10" >

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Add Transaction" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <HBox spacing="10">
        <Label text="Type:"/>
        <ComboBox fx:id="cbType">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Income"/>
                    <String fx:value="Expense"/>
                </FXCollections>
            </items>
        </ComboBox>
    </HBox>

    <HBox spacing="10">
        <Label text="Category:"/>
        <ComboBox fx:id="cbCategory"/>
    </HBox>

    <HBox spacing="10">
        <Label text="Amount:"/>
        <TextField fx:id="txtAmount"/>
    </HBox>

    <HBox spacing="10">
        <Label text="Date:"/>
        <DatePicker fx:id="dpDate"/>
    </HBox>

    <HBox spacing="10">
        <Label text="Description:"/>
        <TextField fx:id="txtDescription"/>
    </HBox>

    <Button text="Save" onAction="#onSave" style="-fx-font-weight: bold;"/>

</VBox>
