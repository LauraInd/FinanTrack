<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.svalero.finances.controller.MainController">

    <top>
        <VBox spacing="5" alignment="CENTER">
            <Label text="FinanTrack" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
            <Label text="Personal Finance Manager" style="-fx-font-size: 14px; -fx-text-fill: gray;"/>
        </VBox>
    </top>


    <center>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <TableView fx:id="transactionTable" prefHeight="400">
                <columns>
                    <TableColumn fx:id="colType" text="Type" prefWidth="100"/>
                    <TableColumn fx:id="colCategory" text="Category" prefWidth="150"/>
                    <TableColumn fx:id="colAmount" text="Amount (€)" prefWidth="100"/>
                    <TableColumn fx:id="colDate" text="Date" prefWidth="120"/>
                    <TableColumn fx:id="colDescription" text="Description" prefWidth="200"/>
                </columns>
            </TableView>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Button fx:id="btnAdd" text="Add" onAction="#onAddTransaction"/>
            <Button fx:id="btnEdit" text="Edit" onAction="#onEditTransaction"/>
            <Button fx:id="btnDelete" text="Delete" onAction="#onDeleteTransaction"/>
            <Button text="Show Chart" onAction="#onShowChart" />
            <Button text="Export to CSV" onAction="#onExportCSV"/>
            <Button text="Export PDF" onAction="#onExportPDF"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label text="Balance:" style="-fx-font-weight: bold;"/>
            <Label fx:id="lblBalance" text="0.00 €" style="-fx-font-size: 14px; -fx-text-fill: #1a6e1a;"/>
        </HBox>
    </bottom>
</BorderPane>
