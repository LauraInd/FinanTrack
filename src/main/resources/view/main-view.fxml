<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.svalero.finances.controller.MainController" stylesheets="@/css/style.css">

    <top>
        <VBox spacing="5" alignment="CENTER">
            <Label text="FinanTrack" style="-fx-font-size: 24px; -fx-font-weight: bold;" styleClass="title"/>
            <Label text="Personal Finance Manager" style="-fx-font-size: 14px; -fx-text-fill: gray;" styleClass="subtitle"/>
        </VBox>
    </top>


    <center>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Filter by Type:"/>
                <ComboBox fx:id="comboType">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="All"/>
                            <String fx:value="Income"/>
                            <String fx:value="Expense"/>
                        </FXCollections>
                    </items>
                </ComboBox>

                <Label text="Filter by Category:"/>
                <ComboBox fx:id="comboCategory"/>

                <Label text="From:"/>
                <DatePicker fx:id="dateFrom" prefWidth="120"/>
                <Label text="To:"/>
                <DatePicker fx:id="dateTo" prefWidth="120"/>

                <Button text="Apply Filter" onAction="#onApplyFilter"/>
                <Button text="Reset Filter" onAction="#onResetFilter"/>
            </HBox>
            <TableView fx:id="transactionTable" prefHeight="400">
                <columns>
                    <TableColumn fx:id="colType" text="Type" prefWidth="100"/>
                    <TableColumn fx:id="colCategory" text="Category" prefWidth="150"/>
                    <TableColumn fx:id="colAmount" text="Amount (€)" prefWidth="100"/>
                    <TableColumn fx:id="colDate" text="Date" prefWidth="120"/>
                    <TableColumn fx:id="colDescription" text="Description" prefWidth="200"/>
                </columns>
            </TableView>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Button fx:id="btnAdd" text="Add" onAction="#onAddTransaction"/>
            <Button fx:id="btnEdit" text="Edit" onAction="#onEditTransaction"/>
            <Button fx:id="btnDelete" text="Delete" onAction="#onDeleteTransaction"/>
            <Button text="Manage Categories" onAction="#onManageCategories" />
            <MenuButton text="Actions" fx:id="menuActions">
                <items>
                    <MenuItem text="Show Chart" onAction="#onShowChart"/>
                    <MenuItem text="Export to CSV" onAction="#onExportCSV"/>
                    <MenuItem text="Export to PDF" onAction="#onExportPDF"/>
                </items>
            </MenuButton>
            <Button text="Close" onAction="#onClose" styleClass="close-btn"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label text="Balance:" style="-fx-font-weight: bold;"/>
            <Label fx:id="lblBalance" text="0.00 €" style="-fx-font-size: 14px; -fx-text-fill: #1a6e1a;" styleClass="balance"/>
        </HBox>
    </bottom>
</BorderPane>
